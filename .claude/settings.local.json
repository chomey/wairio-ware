{
  "permissions": {
    "allow": [
      "Edit",
      "Write"
    ],
    "deny": [
      "Bash(sudo *)",
      "Bash(docker *)",
      "Read(./.env)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)"
    ]
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "allowUnsandboxedCommands": false,
    "writePaths": [
      "~/Library/Application Support/Godot",
      ".",
      "/private/tmp/claude-501/"
    ],
    "network": {
      "allowLocalBinding": true
    }
  }
}

